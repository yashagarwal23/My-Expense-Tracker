<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.oolabproject2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditExpenseActivity"
            android:label="Edit Expense"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditRecurringExpense"
            android:exported="true"
            android:label="Edit Recurring Expense"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".EditExpenseActivity2" />
        <activity
            android:name=".emiCalculator"
            android:label="EMI CALCULATOR"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MonthlyReportActivity" />
        <activity
            android:name=".piechart"
            android:label="@string/title_activity_piechart" />
    </application>

</manifest>