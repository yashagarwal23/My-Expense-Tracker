<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fab_labels_style">
        <item name="android:background">@drawable/fab_action_label_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="caldroid_style" parent="CaldroidDefault">
        <item name="styleCaldroidGridView">@style/caldroid_gridview</item>
        <item name="styleCaldroidWeekdayView">@style/caldroid_weekdayview</item>
    </style>

    <style name="caldroid_gridview" parent="CaldroidDefaultGridView">
        <item name="android:background">@android:color/white</item>
        <item name="android:horizontalSpacing">0dip</item>
        <item name="android:verticalSpacing">0dip</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="caldroid_weekdayview" parent="CaldroidDefaultWeekday">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
